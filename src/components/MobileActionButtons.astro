---
import { Phone, ShoppingBag } from 'lucide-react';
---

<div
  class="fixed bottom-6 left-4 right-4 z-50 md:hidden animate-in slide-in-from-bottom-4 duration-700 fade-in"
>
  <div
    class="glass p-1.5 rounded-2xl flex items-center shadow-2xl shadow-black/20 dark:shadow-black/50 border border-white/20 dark:border-white/10 relative overflow-hidden"
  >
    {/* Background Blur/Gradient fallback/enhancement */}
    <div class="absolute inset-0 bg-white/60 dark:bg-black/60 backdrop-blur-xl -z-10"></div>

    <a
      href="tel:9282771292"
      class="flex-1 flex items-center justify-center gap-2 py-3 px-4 rounded-xl text-zinc-800 dark:text-zinc-100 font-serif font-medium text-sm hover:bg-black/5 dark:hover:bg-white/5 transition-colors active:scale-95 duration-200"
      aria-label="Call Spice Grill & Bar"
    >
      <Phone className="w-4 h-4" />
      <span>Call Now</span>
    </a>

    <div class="w-px h-8 bg-zinc-200 dark:bg-white/10 mx-1"></div>

    <a
      href="https://order.toasttab.com/online/spice-grill-bar-33-lewis-ave"
      target="_blank"
      rel="noopener noreferrer"
      class="flex-1 flex items-center justify-center gap-2 py-3 px-4 rounded-xl bg-gradient-to-r from-brand-orange to-red-600 text-white font-serif font-medium text-sm shadow-md shadow-orange-500/20 hover:opacity-90 transition-all active:scale-95 duration-200"
      aria-label="Order Online"
    >
      <ShoppingBag className="w-4 h-4" />
      <span>Order Online</span>
    </a>
  </div>
</div>
