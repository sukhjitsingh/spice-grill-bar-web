---
import { ShoppingBag } from 'lucide-react';

import AstroButton from './ui/AstroButton.astro';
---

<section
  id="order"
  class="py-32 bg-zinc-100 dark:bg-zinc-950 relative overflow-hidden transition-colors duration-500 flex items-center justify-center"
>
  {/* Background Image */}
  <div
    class="absolute inset-0 bg-[url('https://images.unsplash.com/photo-1559339352-11d035aa65de?q=80&w=2000&auto=format&fit=crop')] opacity-10 dark:opacity-20 bg-cover bg-center"
  >
  </div>

  {/* Glassmorphism Container */}
  <div class="relative z-10 max-w-xl mx-auto px-6 w-full">
    <div
      class="bg-white/30 dark:bg-black/40 backdrop-blur-xl border border-white/20 dark:border-white/10 shadow-2xl rounded-3xl p-8 md:p-12 text-center"
    >
      <h2
        class="text-4xl md:text-5xl font-medium tracking-tight text-zinc-900 dark:text-white mb-4"
      >
        Bring it Home
      </h2>
      <p class="text-lg text-zinc-700 dark:text-zinc-300 mb-8 font-medium">
        Authentic flavors available for <span class="text-orange-700 dark:text-orange-300"
          >Pickup</span
        > & <span class="text-orange-700 dark:text-orange-300">Curbside</span>.
      </p>

      <div class="space-y-6">
        <AstroButton
          href="https://order.toasttab.com/online/spice-grill-bar-33-lewis-ave"
          class="w-full py-7 text-lg shadow-lg hover:shadow-xl hover:-translate-y-0.5 group"
        >
          Start Order <ShoppingBag
            className="w-5 h-5 ml-2 group-hover:-translate-y-0.5 transition-transform"
          />
        </AstroButton>

        <p class="text-xs text-zinc-700 dark:text-zinc-300 font-medium tracking-wide opacity-80">
          Powered by our secure online ordering partner.
        </p>
      </div>
    </div>
  </div>
</section>
