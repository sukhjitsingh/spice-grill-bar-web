{
  "entry": ["src/pages/**/*.astro", "src/content/config.ts", "src/env.d.ts"],
  "project": ["src/**/*.{ts,tsx,astro}"],
  "ignore": [
    "**/*.d.ts",
    "postcss.config.cjs",
    "tailwind.config.mjs",
    "src/components/ui/**",
    ".github/**"
  ],
  "ignoreDependencies": [
    "sharp",
    "@astrojs/check",
    "typescript",
    "eslint-config-airbnb-typescript",
    "autoprefixer",
    "postcss",
    "eslint-plugin-import",
    "eslint-plugin-react",
    "eslint-plugin-react-hooks",
    "eslint-config-airbnb-base",
    "@radix-ui/react-label",
    "@radix-ui/react-separator",
    "puppeteer"
  ],
  "ignoreExportsUsedInFile": true
}
