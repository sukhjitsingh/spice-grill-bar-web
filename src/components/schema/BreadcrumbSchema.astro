---
interface Props {
  items: {
    name: string;
    item: string;
  }[];
}

const { items } = Astro.props;

const schema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": items.map((item, index) => ({
    "@type": "ListItem",
    "position": index + 1,
    "name": item.name,
    "item": `https://spicegrillbar66.com${item.item}`,
  })),
};
---
<script type="application/ld+json" set:html={JSON.stringify(schema)} />
