---
import { Quote, Star } from "lucide-react";
import reviewsData from "../data/reviews.json";

// Define interface matching our JSON
interface Review {
  id: string;
  author: string;
  rating: number;
  text: string;
  source: "Google" | "Yelp";
  date: string;
  avatar?: string;
}

// Duplicate reviews for seamless marquee
const reviews: Review[] = [...reviewsData, ...reviewsData, ...reviewsData] as Review[];
---

<section class="py-24 relative overflow-hidden">
  {/* Background Gradients */}
  <div class="absolute top-1/2 left-1/4 -translate-y-1/2 w-96 h-96 bg-brand-orange/10 rounded-full blur-3xl pointer-events-none" />
  <div class="absolute top-1/2 right-1/4 -translate-y-1/2 w-96 h-96 bg-brand-gold/10 rounded-full blur-3xl pointer-events-none" />

  <div class="container mx-auto px-6 mb-12 text-center relative z-10">
    <h2 class="text-4xl md:text-5xl font-bold mb-6 text-foreground">
      What Our <span class="text-brand-orange">Guests Say</span>
    </h2>
    <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
      We love hearing from our community. Here are some of the latest reviews from Google and Yelp.
    </p>
  </div>

  {/* Marquee Container */}
  <div class="relative w-full overflow-hidden group/marquee">
    {/* Gradient Masks */}
    <div class="absolute left-0 top-0 bottom-0 w-32 z-20 bg-gradient-to-r from-background to-transparent pointer-events-none" />
    <div class="absolute right-0 top-0 bottom-0 w-32 z-20 bg-gradient-to-l from-background to-transparent pointer-events-none" />

    <div class="flex animate-marquee">
      {reviews.map((review, idx) => (
        <div class="w-[340px] md:w-[380px] h-[280px] flex-shrink-0 mx-3 relative group">
          <div class="h-full p-6 rounded-2xl relative overflow-hidden flex flex-col bg-white/80 dark:bg-zinc-900/80 backdrop-blur-xl border border-zinc-200 dark:border-white/10 shadow-lg shadow-zinc-200/50 dark:shadow-black/20 hover:border-orange-500/50 dark:hover:border-orange-500/40 hover:shadow-xl hover:shadow-orange-500/10 transition-all duration-300">
            
            <Quote className="absolute top-5 right-5 w-12 h-12 text-orange-500/15 dark:text-orange-500/10 group-hover:text-orange-500/25 dark:group-hover:text-orange-500/20 transition-colors duration-300 rotate-180" aria-hidden="true" />

            <div class="absolute inset-0 bg-gradient-to-br from-orange-500/0 to-yellow-500/0 group-hover:from-orange-500/5 group-hover:to-yellow-500/5 transition-all duration-500 pointer-events-none rounded-2xl" />

            <div class="flex justify-between items-start mb-4 relative z-10">
              <div class="flex items-center gap-3">
                <div class="relative flex-shrink-0">
                  <div class="absolute inset-0 bg-gradient-to-br from-brand-orange to-brand-gold rounded-full blur-md opacity-40" />
                  <div class="relative w-12 h-12 rounded-full bg-gradient-to-br from-brand-orange to-brand-gold flex items-center justify-center text-white font-bold text-lg shadow-lg border-2 border-white/30 dark:border-white/20">
                    {review.author.charAt(0).toUpperCase()}
                  </div>
                </div>
                <div class="min-w-0">
                  <p class="font-semibold text-zinc-900 dark:text-zinc-100 leading-tight truncate">
                    {review.author}
                  </p>
                  <span class="text-xs text-zinc-500 dark:text-zinc-400">{review.date}</span>
                </div>
              </div>

              <div class:list={[
                "text-xs px-2.5 py-1.5 rounded-full font-semibold flex-shrink-0 relative z-20",
                review.source === 'Google' ? 'bg-blue-100 dark:bg-blue-500/20 border border-blue-300 dark:border-blue-500/40 text-blue-700 dark:text-blue-300' : 'bg-red-100 dark:bg-red-500/20 border border-red-300 dark:border-red-500/40 text-red-700 dark:text-red-300'
              ]}>
                {review.source}
              </div>
            </div>

            <div class="flex gap-1 mb-4 relative z-10">
              {Array.from({ length: 5 }).map((_, i) => (
                <Star
                  className={`w-4 h-4 ${i < review.rating ? "fill-orange-500 text-orange-500" : "text-zinc-300 dark:text-zinc-600"}`}
                  aria-hidden="true"
                />
              ))}
              <span class="sr-only">{review.rating} out of 5 stars</span>
            </div>

            <div class="flex-1 relative z-10 overflow-hidden">
              <p class="text-zinc-700 dark:text-zinc-200 text-sm leading-relaxed line-clamp-4">
                &ldquo;{review.text}&rdquo;
              </p>
            </div>

            <div class="absolute bottom-0 left-0 right-0 h-12 bg-gradient-to-t from-white/90 dark:from-zinc-900/90 to-transparent pointer-events-none rounded-b-2xl" />
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  @keyframes marquee {
    0% { transform: translateX(0); }
    100% { transform: translateX(-33.333%); }
  }
  .animate-marquee {
    animation: marquee 20s linear infinite;
    will-change: transform;
  }
  .group\/marquee:hover .animate-marquee {
    animation-play-state: paused;
  }
</style>
