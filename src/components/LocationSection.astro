---
import { GoogleMap } from './GoogleMap';

const API_KEY = import.meta.env.PUBLIC_GOOGLE_MAPS_API_KEY;
---

<section id="location" class="py-24 bg-zinc-50 dark:bg-black transition-colors duration-500">
  <div class="max-w-7xl mx-auto px-6">
    <div class="mb-12 text-center">
      <h2
        class="text-3xl md:text-5xl font-medium tracking-tight text-zinc-900 dark:text-white mb-4"
      >
        Find Us on Historic Route 66
      </h2>
      <p class="text-zinc-700 dark:text-zinc-300 max-w-2xl mx-auto">
        Located in the heart of Ash Fork, AZ. The perfect pitstop for hungry travelers heading to
        the Grand Canyon or riding historic Route 66.
        <br />
        <span class="text-orange-700 dark:text-orange-400 font-medium"
          >Biker and Family Friendly!</span
        >
      </p>
    </div>

    <div class="glass-card p-2 rounded-2xl overflow-hidden shadow-xl">
      <div class="w-full h-[400px] md:h-[500px] rounded-xl overflow-hidden">
        <GoogleMap apiKey={API_KEY} client:visible />
      </div>
    </div>
  </div>
</section>
