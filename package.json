{
  "name": "spice-grill-bar-web",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build && cp dist/sitemap-index.xml dist/sitemap.xml",
    "preview": "astro preview",
    "astro": "astro",
    "test:aeo": "node scripts/aeo-audit.mjs",
    "test:axe": "axe http://localhost:4321",
    "test:audit": "node scripts/audit.mjs",
    "test:report": "node scripts/generate-seo-report.mjs",
    "test:security": "node scripts/security-scan.mjs",
    "test:lhci": "lhci autorun",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx,.astro",
    "prepare": "simple-git-hooks",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "typecheck": "astro check && tsc --noEmit",
    "knip": "knip",
    "test:quality": "npm run lint && npm run knip && npm run typecheck && npm run test:aeo",
    "postbuild": "cp dist/sitemap-index.xml dist/sitemap.xml",
    "qa": "npm run build && npm run test:quality && npm run test:lhci"
  },
  "dependencies": {
    "@astrojs/partytown": "^2.1.4",
    "@astrojs/react": "^4.4.2",
    "@astrojs/sitemap": "^3.7.0",
    "@fontsource/open-sans": "^5.2.7",
    "@fontsource/playfair-display": "^5.2.8",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "astro": "^5.17.1",
    "astro-indexnow": "^2.1.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.563.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.6",
    "@astrojs/tailwind": "^6.0.2",
    "@axe-core/cli": "^4.11.0",
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@lhci/cli": "^0.15.1",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "astro-eslint-parser": "^1.2.2",
    "autoprefixer": "^10.4.24",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-astro": "^1.5.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "jsdom": "^27.4.0",
    "knip": "^5.83.0",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "prettier-plugin-astro": "^0.14.1",
    "schema-dts": "^1.1.5",
    "simple-git-hooks": "^2.13.1",
    "tailwindcss": "^3.4.19",
    "typescript": "^5.5.4"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "commit-msg": "npx --no -- commitlint --edit ${1}",
    "pre-push": "npm run qa"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,astro}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml}": [
      "prettier --write"
    ]
  }
}
